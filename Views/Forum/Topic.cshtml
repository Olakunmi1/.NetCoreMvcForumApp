@model ForumTopicModel

@{ 
    ViewBag.Title = "Topics";
}

<h1> Welcome to the @Model.Forum.Title Forum !</h1>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">

        <tbody>
            @foreach (var post in Model.Posts)
            {

            <tr>
                <td>

                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">

                        <span> @post.Title </span>
                    </a>
                  
                </td>

                <td>

                    @post.AuthorName
                </td>

                <td>

                    @post.DatePosted

                </td>

                <td>

                     @post.RepliesCount
                </td>
            </tr>

            }
        </tbody>
    </table>
}
else 
{
    <div class="no-post">
        <h3>
            It looks like there are no @Model.Forum.Title posts yet. <br />
            Why not 
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id"> 
            
                <span> Create One ? </span>
            </a>
        </h3>
    </div>
}